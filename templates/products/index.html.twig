{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block breadcrumbs %}{% endblock %}

{% block main %}
{% if hero %}
    <div class="banner-image">
        <img src="{{ asset("images/#{hero.image}")}}" alt="car-image" class="img-fluid w-100">
        <div class="centered-text">
            <h2 class="fw-bold">{{ hero.title }}</h2>
        </div>
    </div>
{% endif %}
    <div class="section-1 container-fluid px-0">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
            {% for s in sliders1 %}
              <div class="swiper-slide">       
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="section-image">
                            <img src="{{ asset("images/#{s.image}")}}" alt="car-image" class="img-fluid">
                            <div class="section-1-text">
                            {#
                            <p class="pt-3">{{ s.summary }}</p>
                            #}
                            </div>
                        </div>
                    </div>   
                  </div>
                </div>
            {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
    <div class="boxes-container container-fluid px-0 improves">
        <div class="d-flex justify-content-between">

    {% for i in improves %}
            <div class="box-image position-relative text-center">
                <img src="{{ asset("images/#{i.image}")}}" alt="staring-image" class="img-fluid">
                <div class="overlay-text-2 d-md-block">
                    <p class="fw-bold">{{ i.title }}</p>
                    <p class="d-none">{{ i.summary }}</p>
                </div>
            </div>
    {% endfor %}
        </div>
    </div>
        
    
    <div class="section-2 container-fluid">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
            {% for s in sliders2 %}
                <div class="swiper-slide">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <div class="section-image">
                                        <img src="{{ asset("images/#{s.image}")}}" alt="car-image" class="img-fluid">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="section-2-text">
                                        <h1>{{ s.title }}</h1>
                                        <p class="pt-5 text-center px-5">{{ s.summary }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                {% endfor %}
                <!-- Repeat the above swiper-slide structure for each additional slide with different content -->
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
    <div class="section-3 container-fluid">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
            {% for s in sliders3 %}
                <div class="swiper-slide">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-4">
                                    <div class="section-3-text">
                                        <h1>{{ s.title }}</h1>
                                        <div class="image-container">
                                            <img src="{{ asset('images/png蓝色光.png')}}" alt="img" class="image-fluid">
                                        </div>                                  
                                      <p class="text-center px-md-5 fw-bold">{{ s.summary }}</p> 
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="section-image mb-5">
                                        <img src="{{ asset("images/#{s.image}")}}" alt="car-image" class="image-fluid">
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                </div>
                {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
{% if spec1 %}
    <div class="section-4 container-fluid px-0" id="spec-1">
        <div class="section-4-bg">
            <img src="{{ asset("images/#{spec1.image}")}}" alt="jeep" class="img-fluid">
            <div class="section-4-title w-75">
                <h1 class="fw-bold">{{ spec1.title }}</h1>
                <p>{{ spec1.summary }}</p>
            </div>
            <div class="section-4-text d-flex">
               <button class="mx-auto w-100 px-4 accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="false" aria-controls="collapse1">
               Specification
              </button>
            </div>
        </div>
    </div>
{% if spec1.images|length > 0 %}
<div class="accordion">
  <div class="accordion-item">
    <div id="collapse1" class="accordion-collapse collapse" data-bs-parent="#accordion">
      <div class="accordion-body">
        <img class="w-100" src="{{ asset("images/#{spec1.images[0].image}") }}">
      </div>
    </div>
  </div>
</div>
{% endif %}
{% endif %}

    <div class="section-5 container-fluid">
        <div class="row">
            <div class="col-md-4">
                <h6 class="pt-4 px-3">{{ 'Left View'|trans }}</h6>
                <img src="{{ asset('images/矩形 1520 拷贝 13.png')}}" alt="jeep-structure" class="img-fluid" >
            </div>
            <div class="col-md-4">
                <h6 class="px-3 pt-4">{{ 'Top View'|trans }}</h6>
                <img src="{{ asset('images/矩形 1520 拷贝 16.png')}}" alt="jeep-structure" class="img-fluid" >
            </div>
            <div class="col-md-4">
                <h6 class="px-3 pt-4">{{ 'Front View'|trans }}</h6>
                <img src="{{ asset('images/矩形 1520 拷贝 15.png')}}" alt="jeep-structure" class="img-fluid" >
            </div>
        </div>
    </div>
    <div class="section-6 container-fluid">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
          {% for s in sliders4 %}
                <div class="swiper-slide">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <div class="section-image">
                                        <img src="{{ asset("images/#{s.image}")}}" alt="car-image" class="img-fluid">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="section-6-text">
                                        <h1>{{ s.title }}</h1>
                                        <p class="pt-2 text-center px-5">{{ s.summary }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
          {% endfor %}
                <!-- Repeat the above swiper-slide structure for each additional slide with different content -->
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
    <div class="section-7 container-fluid">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
          {% for s in sliders5 %}
                <div class="swiper-slide">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4 px-0">
                               <div class="section-7-text">
                                <div class="pe-3">
                                    <h1 class="fw-bold">{{ s.title }}</h1>
                                    <p class="text-start">{{ s.summary }}</p>
                                </div>
                               </div>
                            </div>
                            <div class="col-md-8 px-0">
                                <div class="section-image mb-5">
                                    <img src="{{ asset("images/#{s.image}")}}" alt="car-image" class="img-fluid">
                                </div>
                            </div>
                            
                        </div>
                    </div>
            </div>
          {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
    <div class="section-8 container-fluid px-0">
        <div class="swiper mySwiper swiper6">
            <div class="swiper-wrapper">
          {% for n in sliders6 %}
                <div class="swiper-slide">       
                          <img src="{{ asset("images/#{n.image}")}}" alt="car-image" class="img-fluid product-img">
                          <div class="image-text">
                              <p class="fw-bold">{{ n.title }}</p>
                          </div>
                          <div class="section-4-text d-flex">
                              <button class="px-4" data-bs-toggle="collapse" data-bs-target="#collapse-{{n.id}}" aria-expanded="false" aria-controls="collapse-{{n.id}}">{{ 'Product Overview'|trans }}</button>
                              <button class="px-4">{{ 'Retrofit Highlights'|trans }}</button>
                              <button class="px-4" data-bs-toggle="collapse" data-bs-target="#collapse-spec-{{n.id}}" aria-expanded="false" aria-controls="collapse-spec-{{n.id}}">{{ 'Spec'|trans }}</button>
                           </div>

<div class="accordion" id="accordion-node-{{n.id}}">
  <div class="accordion-item">
    <div id="collapse-{{n.id}}" class="accordion-collapse collapse" data-bs-parent="#accordion-node-{{n.id}}">
      <div class="accordion-body">
        {{ n.summary }}
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <div id="collapse3" class="accordion-collapse collapse" data-bs-parent="#accordion-node-{{n.id}}">
      <div class="accordion-body">
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <div id="collapse-spec-{{n.id}}" class="accordion-collapse collapse" data-bs-parent="#accordion-node-{{n.id}}">
      <div class="accordion-body">
        <div class="container text-center">
          <div class="row row-cols-auto justify-content-center">
        {% for s in n.specs %}
          <div class="col">
            <div class="fw-bold">{{ s.name }}</div>
            <div>{{ s.value }}</div>
          </div>
        {% endfor %}
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

                          <div class="section-9 container-fluid">
                              <div class="row">
                              {% for i in n.images|slice(0,2) %}
                                  <div class="col-md-6 px-0">
                                      <img src="{{ asset("images/#{i.image}")}}" class="img-fluid">
                                  </div>
                              {% endfor %}
                              </div>
                          </div>
                    </div>
          {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
{{ include('feedback.html.twig') }}
{% endblock %}

    {% block javascript %}
  <!-- Initialize Swiper -->
  <script>
    var swiper = new Swiper(".mySwiper", {
        loop:true,
      pagination: {
        el: ".swiper-pagination",
        dynamicBullets: true,
      },
    });
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }
  </script>
<script src="{{ asset('js/validate.js') }}"></script>
    {% endblock %}
